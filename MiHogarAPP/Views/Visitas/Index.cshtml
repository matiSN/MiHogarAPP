@model IEnumerable<ConexionMiHogarAPP.Models.Visitas>

@{
    ViewBag.Title = "Index";
}

<h2>Visitas</h2>

<p>
    @Html.ActionLink("Crear nueva visita", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Hora
        </th>
        <th>
            Rut Paciente
        </th>
        <th>
            Rut Trabajador
        </th>
        <th>
            Rut Tutor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pacientes.rut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trabajador.rut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tutor.rut)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
