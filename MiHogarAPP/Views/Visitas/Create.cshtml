            </div>
        </div>
        <br />
        <div class="form-group">
            Hora
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.hora, new { htmlAttributes = new { @class = "form-control", @required = "" } })
        @Html.ValidationMessageFor(model => model.hora, "", new { @class = "text-danger" })*@
                <select name="hora">
                    <option>15:00</option>
