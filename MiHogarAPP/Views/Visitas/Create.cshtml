@model ConexionMiHogarAPP.Models.Visitas

@{
    ViewBag.Title = "Create";
}

<h2>Crear visita</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Visitas</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Rut Tutor
            <div class="col-md-10">
                @Html.DropDownList("idTutor", null, htmlAttributes: new { @class = "form-control", @required = "" })
                @Html.ValidationMessageFor(model => model.idTutor, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
           Rut Paciente
            <div class="col-md-10">
                @Html.DropDownList("idPaciente", null, htmlAttributes: new { @class = "form-control", @required = "" })
                @Html.ValidationMessageFor(model => model.idPaciente, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            Fecha
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", @required = "" } })
        @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })*@
