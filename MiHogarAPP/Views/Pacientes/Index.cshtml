@model IEnumerable<ConexionMiHogarAPP.Models.Pacientes>

@{
    ViewBag.Title = "Index";
}

<h2>Inicio Pacientes</h2>

<p>
    @Html.ActionLink("Ingresar Nuevo Paciente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Rut Paciente
        </th>
        <th>
            Nombre Paciente
        </th>
        <th>
            Edad
        </th>
        <th>
            Enfermedades
        </th>
        <th>
            Cobertura
        </th>
        <th>
            Medicamentos
        </th>
        
        <th>
            Dependencia
        </th>
       
        <th>
            Rut del Tutor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.rut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.edad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.enfermedades)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cobertura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.medicamentos)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.difunto)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.dependencia)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.eliminado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaEliminado)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Tutor.rut)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
